@page
@model Web.Pages.Admin.Course.Episode.EditEpisodeModel
@{
    ViewData["Title"] = "Edit Episode";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit Episode</h1>
    </div>
</div>
@if (ViewData["IsSuccess"] != null)
{
    <div class="alert alert-danger">
        <p class="help-block">Opration has fialed !</p>
    </div>
}
<form method="post" enctype="multipart/form-data" dir="ltr">

    <input type="hidden" asp-for="CourseEpisode.CourseId" />
    <input type="hidden" asp-for="CourseEpisode.EpisodeId" />
    <input type="hidden" asp-for="CourseEpisode.EpisodFileName" />




    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Episode Info
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->


                    <div class="form-group col-md-8">
                        <label>Episode Name :</label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-8">
                        <label>Episode Time :</label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTime" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-8">
                        <label> Episode File : </label>
                        <input type="file" name="fileUp">
                        <span asp-validation-for="CourseEpisode.EpisodFileName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-8">
                        <input type="checkbox" asp-for="CourseEpisode.IsFree">  Is Free
                    </div>




                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <input type="submit" class="btn btn-success" value="Edit Episode" />
        </div>
    </div>
</form>
