@page "{id}"
@model Web.Pages.Admin.Role.DeleteRoleModel
@{
    ViewData["Title"] = "Delete Role";
    List<string> permissionTitel = ViewData["PermissionTitle"] as List<string>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete Role</h1>
    </div>
</div>

<div class="row" dir="ltr">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Role Info
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <!-- Nav tabs -->
                <dl class="dl-horizontal">
                    <dt>Role Title :</dt>
                    <dd>@Model.Role.RoleTitle</dd>
                    <br />

                    <dt>Create Date :</dt>
                    <dd>@Model.Role.CreateDate.ToString("MMM/dd/yyyy")</dd>
                    <br />


                    @if (ViewData["PermissionTitle"] != null)
                    {
                        <dt>Access Role:</dt>
                        <dd>
                            @foreach (var item in permissionTitel)
                            {
                                @item
                                <i> - </i>
                            }
                        </dd>
                        <br />
                    }
                    <br />
                    <dt>
                        <a href="/Admin/Role" class="btn btn-info">Optout</a>
                    </dt>
                    <dd>
                        <form method="post">
                            <input type="hidden" asp-for="Role.RoleId" />

                            <input type="submit" class="btn btn-danger" value="Delete Role" />
                        </form>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>