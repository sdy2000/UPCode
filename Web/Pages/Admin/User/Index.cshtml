@page
@using Core.Servises.Interfaces

@model Web.Pages.Admin.User.IndexModel
@{
    ViewData["Title"] = "User Management";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">User Management</h1>
    </div>
</div>

<div class="container">
    <a href="/Admin/User/CreateUser" class="btn btn-success btn-outline">Add New User</a>
</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                User List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">

                                        <div class="form-group col-md-6">
                                            <input type="search" name="filterUserName" class="form-control" placeholder="UserName" />
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="search" name="filterEmail" class="form-control" placeholder="Email" />
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div id="row">

                                        <div class="form-group col-md-6">
                                            <select name="genderId" aria-controls="dataTables-example"
                                                    class="form-control input-sm">
                                                <option value="0">Gender</option>
                                                <option value="1">Man</option>
                                                <option value="2">Woman</option>
                                                <option value="3">Transgender</option>
                                            </select>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <select name="take" aria-controls="dataTables-example"
                                                    class="form-control input-sm">
                                                <option value="10">Paginig</option>
                                                <option value="10">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <input type="submit" class="btn btn-sm btn-info" value="Actions" />
                                    <a class="btn btn-sm btn-warning" href="/Admin/Users">Refresh</a>
                                </div>
                            </div>
                        </form>
                        <br />
                        <table class="table table-striped table-bordered table-hover dataTable no-footer"
                               id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Condition</th>
                                    <th>Register</th>
                                    <th>Operation</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int v = 0;
                                }

                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite"
                                     aria-relevant="all">
                                    Show page 1 of 55
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>