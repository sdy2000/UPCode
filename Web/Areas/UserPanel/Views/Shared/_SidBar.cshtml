@using Core.DTOs
@using Core.Servises.Interfaces
@inject IUserService _userSerivce

@{
    SideBarUserPanelViewModel user = _userSerivce.GetSideBarUserPanelData(User.Identity.Name) as SideBarUserPanelViewModel;
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="/UserPanel/EditProfile" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/UserAvatar/ThumbSize/@user.UserAvatar" alt="@user.UserAvatar" title="@user.UserName">
            </div>
            <div class="detail">
                <span>
                    @user.UserName
                </span>
                <span> Register Date : @user.RegisterDate </span>
            </div>
        </div>

        <section>
            <header><h3> desk </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPanel"> View account </a></li>
                    <li><a href="/UserPanel/EditProfile"> Edit account </a></li>
                    <li><a href="/UserPanel/EditPassword"> Edit Password </a></li>
                    <li><a href="/UserPanel/Wallet"> Wallet  </a></li>
                    <li><a href=""> Account Settings </a></li>
                    <li><a href="/Logout"> Logout </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>