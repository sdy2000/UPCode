@model Core.DTOs.InformationUserViewModel

@{
    ViewData["Title"] = "UserPanel" + " " + User.Identity.Name;
}



<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">UPCode</a></li>
            <li class="breadcrumb-item active" aria-current="page"> UserPanel </li>
        </ul>
    </nav>
</div>



<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SidBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> Dashboard </h1></header>
                        <div class="inner">
                            <div class="account-information">
                                <h3> User Info </h3>
                                <ul>
                                    @if (!string.IsNullOrEmpty(Model.FirstName) && !string.IsNullOrEmpty(Model.LastName))
                                    {
                                        <li> <i class="zmdi zmdi-account"></i> First name and Last name : @(Model.FirstName + " " + Model.LastName) </li>
                                    }
                                    <li> <i class="zmdi zmdi-assignment-account"></i> UserName :  @Model.UserName </li>
                                    <li> <i class="zmdi zmdi-email"></i> Email : @Model.Email </li>
                                    <li> <i class="zmdi zmdi-calendar-check"></i> Regiter Date : @Model.RegisterDate.ToString() </li>
                                    @if (!string.IsNullOrEmpty(Model.PhonNumber))
                                    {
                                        <li> <i class="zmdi zmdi-smartphone-android"></i> Phone Number : @Model.PhonNumber </li>
                                    }
                                    @if (Model.UesrGender != null)
                                    {
                                        <li><i class="zmdi zmdi-account"></i>Gender : @Model.UesrGender  </li>
                                    }
                                    <li><i class="zmdi zmdi-money"></i>Wallet : 120 $ </li>
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>