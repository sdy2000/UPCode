@model Core.DTOs.ChengePassword
@{
    ViewData["Title"] = "Edit Password";
}



<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">UPCode</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Edit Password </li>
        </ul>
    </nav>
</div>



<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SidBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> Edit Password </h1></header>
                        <div class="inner form-layer">
                            <form action="EditPassword" method="post">
                                


                                <div class="row">


                                    <div class="col-md-7 col-sm-8 col-xs-11">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi  zmdi-lock-open"></i></span>
                                            <input type="password" asp-for="OldPassword" class="form-control" placeholder=" Current password" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-11">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi  zmdi-key"></i></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder=" New password" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-11">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi  zmdi-key"></i></span>
                                            <input type="password" asp-for="RePassword" class="form-control" placeholder=" New Repassword" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </div>



                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success "> Edit Password </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>