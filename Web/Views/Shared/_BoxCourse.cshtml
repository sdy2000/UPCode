@model Core.DTOs.ShowCourseListItemViewModel

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
    <article>
        <a href="/ShowCourse/@Model.CourseId" class="img-layer">
            <img style="height:200px" src="/CourseImage/thumb/@Model.ImageName">
        </a>
        <h2><a href="/Course/ThumbSize/@Model.ImageName"> @Model.CourseTitle </a></h2>
        <span>
            @((Model.Price == 0) ? "Free" : Model.Price.ToString("#,0"))
        </span>
        @if (Model.CourseEpisodes != null)
        {
            var duration = new TimeSpan(Model.CourseEpisodes.Sum(c => c.EpisodeTime.Ticks));
            var th = (int)duration.TotalHours;
            var tm = (int)duration.TotalMinutes - (th * 60);
            var ts = "00";

            <i>@($"{th}:{tm}:{ts}")</i>
        }

    </article>
</div>